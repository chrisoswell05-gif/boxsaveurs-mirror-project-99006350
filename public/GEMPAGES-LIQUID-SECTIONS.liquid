{% comment %}
  ============================================
  1. ANNOUNCEMENT BAR
  ============================================
{% endcomment %}

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Texte d'annonce",
      "default": "LE GOÛT RÉCONFORTANT DU TERROIR POUR VOS SOIRÉES D'AUTOMNE"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Couleur de fond",
      "default": "#F5A623"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur du texte",
      "default": "#1B2B4B"
    }
  ]
}
{% endschema %}

<div class="announcement-bar" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="announcement-bar__content">
    {{ section.settings.announcement_text }}
  </div>
</div>

<style>
  .announcement-bar {
    text-align: center;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    font-family: 'Montserrat', sans-serif;
  }
  .announcement-bar__content {
    max-width: 1200px;
    margin: 0 auto;
  }
</style>


{% comment %}
  ============================================
  2. HEADER / NAVIGATION
  ============================================
{% endcomment %}

{% schema %}
{
  "name": "Header Navigation",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Lien bouton CTA"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Texte bouton CTA",
      "default": "Commander"
    }
  ],
  "blocks": [
    {
      "type": "nav_link",
      "name": "Lien navigation",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Texte"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Lien"
        }
      ]
    }
  ]
}
{% endschema %}

<header class="header">
  <div class="header__container">
    <a href="/" class="header__logo">
      {% if section.settings.logo %}
        <img src="{{ section.settings.logo | image_url: width: 150 }}" alt="{{ shop.name }}" width="150" height="60">
      {% else %}
        <span class="header__logo-text">{{ shop.name }}</span>
      {% endif %}
    </a>
    
    <nav class="header__nav">
      {% for block in section.blocks %}
        {% if block.type == 'nav_link' %}
          <a href="{{ block.settings.link }}" class="header__nav-link">
            {{ block.settings.label }}
          </a>
        {% endif %}
      {% endfor %}
    </nav>
    
    <div class="header__actions">
      <a href="{{ routes.cart_url }}" class="header__cart">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="m1 1 4 4 3 12h13l3-8H6"></path>
        </svg>
        <span class="header__cart-count">{{ cart.item_count }}</span>
      </a>
      
      {% if section.settings.cta_link %}
        <a href="{{ section.settings.cta_link }}" class="btn btn--primary">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</header>

<style>
  .header {
    background-color: #1B2B4B;
    padding: 1rem 1.5rem;
    position: sticky;
    top: 0;
    z-index: 50;
  }
  .header__container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .header__logo img {
    height: 60px;
    width: auto;
  }
  .header__logo-text {
    color: #F5A623;
    font-size: 1.5rem;
    font-weight: 700;
  }
  .header__nav {
    display: flex;
    gap: 2rem;
  }
  .header__nav-link {
    color: #F8F5F0;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s;
  }
  .header__nav-link:hover {
    color: #F5A623;
  }
  .header__actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .header__cart {
    color: #F8F5F0;
    position: relative;
  }
  .header__cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: #F5A623;
    color: #1B2B4B;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.125rem 0.375rem;
    border-radius: 9999px;
  }
  .btn--primary {
    background-color: #F5A623;
    color: #1B2B4B;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s;
  }
  .btn--primary:hover {
    background-color: #e6951f;
    transform: scale(1.05);
  }
  
  @media (max-width: 768px) {
    .header__nav {
      display: none;
    }
  }
</style>


