      "id": "subtitle",
      "label": "Sous-titre",
      "default": "Chaque box, une nouvelle expérience gourmande"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "price_text",
      "label": "Texte prix",
      "default": "À partir de 24,99$/mois"
    },
    {
      "type": "text",
      "id": "btn_primary_text",
      "label": "Bouton primaire",
      "default": "J'essaie"
    },
    {
      "type": "url",
      "id": "btn_primary_link",
      "label": "Lien bouton primaire"
    },
    {
      "type": "text",
      "id": "btn_secondary_text",
      "label": "Bouton secondaire",
      "default": "J'offre"
    },
