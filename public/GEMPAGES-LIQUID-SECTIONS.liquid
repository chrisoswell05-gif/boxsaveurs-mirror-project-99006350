<section class="hero">
  <div class="hero__background">
    {% if section.settings.background_image %}
      <img 
        src="{{ section.settings.background_image | image_url: width: 1920 }}" 
        alt="{{ section.settings.title }}"
        class="hero__bg-image"
        loading="eager"
      >
    {% endif %}
    <div class="hero__overlay"></div>
  </div>
  
  <div class="hero__content">
    <div class="hero__text">
      <h1 class="hero__title">{{ section.settings.title }}</h1>
      <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
      
      {% if section.settings.description %}
        <div class="hero__description">
          {{ section.settings.description }}
        </div>
      {% endif %}
      
      <p class="hero__price">{{ section.settings.price_text }}</p>
      
      <div class="hero__buttons">
        {% if section.settings.btn_primary_link %}
          <a href="{{ section.settings.btn_primary_link }}" class="btn btn--navy">
            {{ section.settings.btn_primary_text }}
          </a>
        {% endif %}
        
        {% if section.settings.btn_secondary_link %}
          <a href="{{ section.settings.btn_secondary_link }}" class="btn btn--yellow">
            {{ section.settings.btn_secondary_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }
  .hero__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  .hero__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to right, rgba(27, 43, 75, 0.8), rgba(27, 43, 75, 0.7), rgba(27, 43, 75, 0.6));
    z-index: 1;
  }
  .hero__content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    width: 100%;
  }
  .hero__text {
    max-width: 48rem;
  }
  .hero__title {
    font-size: 3rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 1.5rem;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }
  .hero__subtitle {
    font-size: 1.875rem;
    font-weight: 600;
    color: #F5A623;
    margin-bottom: 1rem;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }
  .hero__description {
    font-size: 1.5rem;
    color: #ffffff;
    margin-bottom: 1rem;
  }
  .hero__price {
    font-size: 1.875rem;
    font-weight: 700;
    color: #F5A623;
    margin-bottom: 2rem;
  }
  .hero__buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .btn--navy {
    background-color: #1B2B4B;
    color: #F8F5F0;
    padding: 1rem 2rem;
    border-radius: 0.375rem;
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s;
  }
  .btn--navy:hover {
    background-color: rgba(27, 43, 75, 0.9);
    transform: scale(1.05);
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
  }
  .btn--yellow {
    background-color: #F5A623;
    color: #1B2B4B;
    padding: 1rem 2rem;
    border-radius: 0.375rem;
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s;
  }
  .btn--yellow:hover {
    background-color: #e6951f;
    transform: scale(1.05);
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
  }
  
  @media (max-width: 768px) {
    .hero__title {
      font-size: 2rem;
    }
    .hero__subtitle {
      font-size: 1.25rem;
    }
    .hero__price {
      font-size: 1.5rem;
    }
  }
</style>


