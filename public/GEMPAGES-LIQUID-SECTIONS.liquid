<div class="highlight-bar">
  <div class="highlight-bar__track">
    {% for i in (1..2) %}
      <div class="highlight-bar__content">
        <span>{{ section.settings.text_1 }}</span>
        <span class="highlight-bar__dot">•</span>
        <span>{{ section.settings.text_2 }}</span>
        <span class="highlight-bar__dot">•</span>
        <span>{{ section.settings.text_3 }}</span>
        <span class="highlight-bar__dot">•</span>
        <span>{{ section.settings.text_4 }}</span>
        <span class="highlight-bar__dot">•</span>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .highlight-bar {
    background-color: #1B2B4B;
    border-top: 1px solid rgba(245, 166, 35, 0.3);
    padding: 2rem 0;
    overflow: hidden;
  }
  .highlight-bar__track {
    display: flex;
    animation: marquee 20s linear infinite;
  }
  .highlight-bar__content {
    display: flex;
    gap: 1rem;
    white-space: nowrap;
    color: #F8F5F0;
    font-size: 0.875rem;
    font-weight: 500;
  }
  .highlight-bar__dot {
    color: #F5A623;
  }
  
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
</style>


